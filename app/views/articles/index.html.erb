<p id="notice"><%= notice %></p>
<div class="card-body mt-3">
    <%= form_with(url: '/articles', method: 'get', local: true) do %>
       <div>
        <%= text_field_tag :search%>
        <%= submit_tag("Search") %>
      </div>
    <% end %><br>
<table>
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Body</th>
      </tr>
    </thead>
    <tbody>
        <% @articles.each do |a| %>
          <tr>
            <td><%= a.title %></td>
            <td><%= a.body %></td>
           </tr>
        <% end %>
    </tbody>
</table>
